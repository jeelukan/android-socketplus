<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/build_server_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/buildServerDialogTitleTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textSize="20sp" 
        android:text="@string/buildServerDialogTitle"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/buildServerDialogIpAddressEditText"
            android:layout_width="70dp"
            android:layout_height="wrap_content" 
            android:text="@string/buildServerDialogTitlePortLabelText" />"
        <EditText
            android:id="@+id/buildServerDialogPortEditText"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长连接" >

        </CheckBox>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保持心跳" >

        </CheckBox>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="捕获异常" >

        </CheckBox>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <Button
            android:id="@+id/buildServerDialogCancelButton"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/okTextButton" >
        </Button>

        <Button
            android:id="@+id/buildServerDialogConfirmButton"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dip"
            android:text="@string/cancelTextButton" />
    </RelativeLayout>

</LinearLayout>